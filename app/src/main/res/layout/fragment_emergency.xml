<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fame.plumbum.chataround.emergency.view.EmergencyFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/allLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/responderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <Button
                        android:focusableInTouchMode="true"
                        android:id="@+id/add_contacts_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/border_button"
                        android:text="@string/add_responders" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/responderLayout"
                    android:orientation="vertical">


                    <com.fame.plumbum.chataround.helper.FButton
                        android:layout_marginTop="56dp"
                        android:id="@+id/sosButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_gravity="center"
                        android:layout_margin="12dp"
                        android:text="@string/sos"
                        android:textSize="48dp"
                        fbutton:buttonColor="@color/gray"
                        fbutton:cornerRadius="120dp"
                        fbutton:shadowEnabled="true"
                        fbutton:shadowHeight="4dp"
                        />

                    <TextView
                        android:id="@+id/sosButtonOld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="48dp"
                        android:background="@drawable/translucent_button"
                        android:padding="48dp"
                        android:text="@string/sos"
                        android:textSize="48dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sos_service_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/enable_sos_service_text"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sosLayout"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selected_contacts_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
                        android:drawablePadding="5dp"
                        android:text="@string/selected_contacts"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/emergency_contacts_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/selected_contacts_text"
                        android:layout_marginTop="11dp"
                        android:nestedScrollingEnabled="false" />


                    <LinearLayout
                        android:id="@+id/add_contacts_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergency_contacts_recycler_view"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_contacts_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
