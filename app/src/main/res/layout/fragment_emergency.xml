<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fame.plumbum.chataround.emergency.view.EmergencyFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sosLayout"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sosButton"
            android:text="@string/start_sos"
            android:layout_margin="2dp"
            android:background="@drawable/border_button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sos_service_text"
            android:layout_margin="10dp"
            android:text="@string/enable_sos_service_text"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/sosLayout"
       android:layout_marginTop="10dp"
       android:layout_marginRight="2dp"
       android:layout_marginLeft="2dp"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/selected_contacts_text"
           android:text="@string/selected_contacts"
           android:textSize="16sp"
           android:drawablePadding="5dp"
           android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
           android:textColor="@color/black"/>

       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/selected_contacts_text"
           android:id="@+id/emergency_contacts_recycler_view"/>
       <ProgressBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:visibility="gone"
           android:id="@+id/progressBar"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/add_contacts_layout"
           android:orientation="vertical"
           android:visibility="gone"
           android:layout_centerInParent="true">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:id="@+id/add_contacts_text_view"
               android:text="Add at least one contact to enable SOS service"/>
           <Button
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:id="@+id/add_contacts_button"
               android:layout_gravity="center_horizontal"
               android:text="Add Contacts"
               android:layout_marginTop="10dp"
               android:background="@drawable/border_button"
               />
       </LinearLayout>

   </RelativeLayout>


</RelativeLayout>
