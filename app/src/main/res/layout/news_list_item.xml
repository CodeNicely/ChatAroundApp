<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#000000"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/trump"
                android:alpha="0.5"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/NewsSmallDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="The relationship between India and Palestine is taking a new step."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_alignBottom="@+id/image"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignBottom="@+id/image"
                android:padding="4dp"
                android:layout_margin="4dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:id="@+id/newsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textScaleX="0.7"
                        android:text="FEATURES"
                        android:textColor="#F7D410"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/newSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/newsLabel"
                        android:fontFamily="sans-serif-condensed"
                        android:text="NewsSource"
                        android:textColor="#FFFFFF"
                        android:textScaleX="0.8"
                        android:textSize="15dp"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="The relationship between India and Palestine."
                    android:textColor="#FFFFFF"
                    android:textScaleX="0.9"
                    android:textSize="22dp"
                    android:lineSpacingExtra="0.2dp"

                    />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/news_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/imageLayout"
            android:weightSum="2"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/newsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="News Author"
                android:textColor="#E2CFCA"
                android:textSize="@dimen/textSizeExtraSmall" />


            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="4dp"
                android:text="News Timestamp"
                android:textColor="#E2CFCA"
                />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
