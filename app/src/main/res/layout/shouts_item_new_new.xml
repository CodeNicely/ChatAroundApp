<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_margin="2dp"
        android:id="@+id/rL_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/image_user_rl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_bound"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="#202020" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_boundary"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="#ffffff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_text_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/image_user_rl"
            android:orientation="vertical">


            <TextView
                android:id="@+id/poster_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/report_dot"
                android:maxLines="1"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/report_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/poster_name"
                android:layout_alignTop="@+id/poster_name"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/timestamp"
                android:src="#ec3b3b"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp"
                android:text="time" />

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poster_name"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:text="Message"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_below="@+id/timestamp"
                android:layout_alignParentEnd="true"
                android:id="@+id/voteLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/upvote"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/upvotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/downvotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/downvote"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp"

                    />


            </LinearLayout>


            <LinearLayout

                android:layout_alignBottom="@+id/voteLayout"
                android:layout_toLeftOf="@+id/voteLayout"
                android:id="@+id/ll_buts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/chat_dot"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginRight="8dp"
                        android:src="#fcbe13"
                        android:visibility="gone" />

                    <TextView

                        android:id="@+id/number_of_replies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/report_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/comment_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/number_of_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/voteTextLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You already voted this post!" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


