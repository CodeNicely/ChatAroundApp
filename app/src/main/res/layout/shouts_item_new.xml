<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >

    <RelativeLayout
        android:id="@+id/rL_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/image_user_rl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_bound"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="#202020" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_boundary"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:src="#ffffff" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_post"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_text_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/image_user_rl"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/poster_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/voteLayout"
                    android:maxLines="1"
                    android:text="Name"
                    android:textColor="#102040"
                    android:textSize="12sp" />

                <TextView
                    android:layout_toLeftOf="@+id/voteLayout"
                    android:layout_below="@+id/poster_name"
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Message"
                    android:textColor="#000000" />

         <!--       <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/report_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@+id/poster_name"
                    android:layout_alignTop="@+id/poster_name"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/timestamp"
                    android:src="#ec3b3b"
                    android:visibility="gone"

                    />-->

                <!--<TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="4dp"
                    android:text="time" />-->

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/voteLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/upvote"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/upvotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/zero" />



                    <TextView
                        android:id="@+id/downvotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/zero" />

                    <ImageView
                        android:id="@+id/downvote"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"

                        />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_buts"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_text_post"
            android:orientation="horizontal"
            android:padding="4dp"
            >


            <LinearLayout
                android:id="@+id/timestamp_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timestamp_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chat_dot"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginRight="8dp"
                    android:src="#fcbe13"
                    android:visibility="gone" />
            </LinearLayout>

          <!--  <LinearLayout
                android:id="@+id/report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/report_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />


            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comment_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>


